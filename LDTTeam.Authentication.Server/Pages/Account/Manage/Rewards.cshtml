@page
@using LDTTeam.Authentication.Server.Pages.Account.Manage
@model LDTTeam.Authentication.Server.Pages.Account.Manage.Rewards

@{
    ViewData["Title"] = "My Rewards";
    ViewData["ActivePage"] = ManageNavPages.Rewards;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
            <tr>
                <td>Reward</td>
                <td>Enabled</td>
            </tr>
            </thead>
            <tbody>
            @foreach ((string reward, bool enabled) in Model.RewardsDictionary)
            {
                <tr>
                    <td>@reward</td>
                    <td>@enabled</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}